<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow mb-4">
                    <div class="card-body p-5">
                        <h1 class="mb-4"><%= post.title %></h1>
                        <p class="mb-4"><%= post.content %></p>
                        <small class="d-block text-muted mb-2">Created by: <%= post.User ? post.User.name : 'Unknown' %></small>
                        <small class="d-block text-muted mb-4">Created at: <%= post.createdAt %></small>

                        <h2 class="mb-4">Comments</h2>
                        <ul class="list-group mb-4">
                            <% if (post.Comments.length > 0) { %>
                                <% post.Comments.forEach(comment => { %>
                                    <li class="list-group-item">
                                        <p><strong><%= comment.User ? comment.User.name : 'Anonymous' %>:</strong> <%= comment.content %></p>
                                    </li>
                                <% }) %>
                            <% } else { %>
                                <li class="list-group-item">No comments yet.</li>
                            <% } %>
                        </ul>

                        <!-- Pagination Controls for Comments -->
                        <div class="text-center mt-4">
                            <% if (currentCommentPage > 1) { %>
                                <a href="?commentPage=<%= currentCommentPage - 1 %>" class="btn btn-outline-primary">Previous Comments</a>
                            <% } %>

                            <% if (currentCommentPage < totalCommentPages) { %>
                                <a href="?commentPage=<%= currentCommentPage + 1 %>" class="btn btn-outline-primary">Next Comments</a>
                            <% } %>
                        </div>

                        <h3 class="mb-4">Add a Comment</h3>
                        <form action="/posts/<%= post.id %>/comments" method="POST">
                            <div class="form-group mb-4">
                                <textarea name="content" class="form-control" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Comment</button>
                        </form>

                        <div class="text-center mt-4">
                            <a href="/posts" class="btn btn-secondary">Back to Posts</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
