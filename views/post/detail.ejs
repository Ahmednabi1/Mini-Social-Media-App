<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">MySocialApp</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/posts">Timeline</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-posts">My Posts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/my-comments">My Comments</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/auth/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow mb-4">
                    <div class="card-body p-5">
                        <h1 class="mb-4"><%= post.title %></h1>
                        <p class="mb-4"><%= post.content %></p>
                        <small class="d-block text-muted mb-2">Created by: <%= post.User ? post.User.name : 'Unknown' %></small>
                        <small class="d-block text-muted mb-4">Created at: <%= post.createdAt %></small>

                        <h2 class="mb-4">Comments</h2>
                        <ul class="list-group mb-4">
                            <% if (post.Comments.length > 0) { %>
                                <% post.Comments.slice((currentCommentPage - 1) * commentsPerPage, currentCommentPage * commentsPerPage).forEach(comment => { %>
                                    <li class="list-group-item">
                                        <p><strong><%= comment.User ? comment.User.name : 'Anonymous' %>:</strong> <%= comment.content %></p>
                                    </li>
                                <% }) %>
                            <% } else { %>
                                <li class="list-group-item">No comments yet.</li>
                            <% } %>
                        </ul>

                        <!-- Pagination Controls for Comments -->
                        <div class="text-center mt-4">
                            <% if (currentCommentPage > 1) { %>
                                <a href="?commentPage=<%= currentCommentPage - 1 %>" class="btn btn-outline-primary">Previous Comments</a>
                            <% } %>

                            <% if (currentCommentPage < totalCommentPages) { %>
                                <a href="?commentPage=<%= currentCommentPage + 1 %>" class="btn btn-outline-primary">Next Comments</a>
                            <% } %>
                        </div>


                        <h3 class="mb-4">Add a Comment</h3>
                        <form action="/posts/<%= post.id %>/comments" method="POST">
                            <div class="form-group mb-4">
                                <textarea name="content" class="form-control" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Comment</button>
                        </form>

                        <div class="text-center mt-4">
                            <a href="/posts" class="btn btn-secondary">Back to Posts</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>

</html>
